<h1>Add a new task to Cindy's To Do List</h1>
<br>
<h1>New Task</h1>

<% if @task.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul> <% @contact.errors.full_messages.each do |message| %>
    <li><%= message %></li>
       <% end %>
  </ul>
<% end %>

<form action = "/tasks" method="post">
  <label for "task_name">Name</label>
  <input id="task_name" name="task[name]" type="text" value="<%= @task.name %>">
  <label for "task_due_date">Due Date</label>
  <input id="task_due_date" name="task[due_date]" type="text" value="<%= @task.due_date %>">
  <button>Create task</button>
</form>
